mod.wizards.newContentElement.wizardItems.contentElements {
    elements {
        accordion {
            title = LLL:EXT:theme_core/Resources/Private/Language/ContentElements.xlf:accordion.title
            description = LLL:EXT:theme_core/Resources/Private/Language/ContentElements.xlf:accordion.description
            icon = ../typo3conf/ext/theme_core/Resources/Public/Icons/ContentElements/accordion.gif
            tt_content_defValues {
                CType = accordion
            }
        }
    }
    show := addToList(accordion)
}

TCEFORM.tt_content.pi_flexform.accordion.sDEF.wrapperClass {
    addItems {
        0 = LLL:EXT:theme_core/Resources/Private/Language/ContentElements.xlf:accordion.flexform.wrapperClass_none
    }
}

TCEFORM.tt_content.pi_flexform.accordion.sDEF.accordionMode {
    addItems {
        0 = LLL:EXT:theme_core/Resources/Private/Language/ContentElements.xlf:accordion.flexform.accordionMode_firstChildOpenSingleSelect
        1 = LLL:EXT:theme_core/Resources/Private/Language/ContentElements.xlf:accordion.flexform.accordionMode_allClosedSingleSelect
        2 = LLL:EXT:theme_core/Resources/Private/Language/ContentElements.xlf:accordion.flexform.accordionMode_allClosedMultiSelect
        3 = LLL:EXT:theme_core/Resources/Private/Language/ContentElements.xlf:accordion.flexform.accordionMode_firstChildOpenMultiSelect
        4 = LLL:EXT:theme_core/Resources/Private/Language/ContentElements.xlf:accordion.flexform.accordionMode_allOpen
    }
}

mod.web_layout.tt_content.preview.accordion = EXT:theme_core/Resources/Private/Templates/ContentElements/BE/Accordion.html

